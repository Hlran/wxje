}
/*分类  */
.classify-container{
  width:95%;
  margin:0 auto;
}
.classify{
  display: inline-block; 
  width: 18%;
  height: 20px;
  font-size: 14px;
  margin:10px 1%;
  line-height: 15px;
  background: #cfcfcf;
  text-align: center;
  border-radius: 8px;
}

/*相册  */
.style-header{
  margin: 0px 0 10px 10px;
}
.push_context{
  width: 90%;
  height: 90%;
  border: 1px solid #cfcfcf;
  background: #cfcfcf;
  box-shadow: 2px 2px #aaa;
}
.photo_set{
  width: 65%;
  height: 85px;
  margin-left: 10px;
  display: inline-block;
  vertical-align: bottom;
}
.photo_set_num{
  width: 30%;
  height: 85px;
  display: inline-block;
  vertical-align: bottom
}
.photo_set1{
  display: inline-block;
  width: 40%;
  height: 25px;
  margin: 5px 3%;
  position: relative;
}
.photo_set1:nth-last-of-type(1){
  background: #aaa;
}
.photo_set1:nth-last-of-type(2){
  background: #ccc;
}
.photo_set1:nth-last-of-type(3){
  background: #999;
}
.photo_set1:nth-last-of-type(4){
  background: #000;
}
.photo_set1 .style{
  position: absolute;
  top: 27px;
  width: 100%;
  text-align: center;
}
/*发表文章  */
.public_style{
  font-size:7px;
  margin-top: 10px;
}
.article{
  width: 95%;
  min-height: 35px;
  background: #cfcfcf;
  margin:10px auto 0; 
  padding: 5px;
}
.article view{
  clear: both;
  display: inline-block;
  vertical-align: middle;
}
.article-left{
  width:70%;
}
.article-right{
  width: 30%;
}
.article-header,.article-body{
  width:100%;
}
.style-title{
  display: inline-block;
  font-size: 13px;
  max-width: 85%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  vertical-align: middle;
  margin-right:10px;
}
.picture{
  width: 20px;
  height: 15px;
  vertical-align: middle;
}
.style-zan{
  margin-right: 10px;
}